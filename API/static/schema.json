{
    "openapi": "3.0.3",
    "info": {
        "title": "Quran API",
        "version": "1.0.0",
        "description": "An API providing data of Quran"
    },
    "paths": {
        "/api/rub/": {
            "get": {
                "operationId": "List of Rubs",
                "description": "Get list of Rubs in Quran",
                "parameters": [
                    {
                        "in": "query",
                        "name": "page",
                        "schema": {
                            "type": "integer"
                        },
                        "description": "A page number within the paginated result set.",
                        "examples": {
                            "Page1": {
                                "value": 1,
                                "summary": "First 10 results",
                                "description": "To Get First 10 Rubs"
                            },
                            "Page2": {
                                "value": 2,
                                "summary": "From results 10 to 20",
                                "description": "To Get Rubs from 10 to 20"
                            }
                        }
                    }
                ],
                "tags": [
                    "Rub"
                ],
                "security": [
                    {
                        "tokenAuth": []
                    },
                    {
                        "cookieAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/PaginatedRubList"
                                }
                            }
                        },
                        "description": "OK"
                    },
                    "401": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/401_Unauthorized"
                                }
                            }
                        },
                        "description": "Unauthorized. Authorization Credentials not Provided"
                    },
                    "404": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/404_Not_Found"
                                }
                            }
                        },
                        "description": "Page Not Found"
                    },
                    "429": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/429_Throttled"
                                }
                            }
                        },
                        "description": "Throttled. Rate limit exceeded"
                    }
                }
            }
        },
        "/api/rub/{rub_number}/": {
            "get": {
                "operationId": "Rub Item",
                "description": "Retrive a Rub of Quran",
                "parameters": [
                    {
                        "in": "path",
                        "name": "rub_number",
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Number of rub to get details of",
                        "required": true,
                        "examples": {
                            "Hizb 1": {
                                "value": 1,
                                "summary": "First Rub",
                                "description": "To Get details of first Rub in Quran"
                            },
                            "Hizb 2": {
                                "value": 2,
                                "summary": "Second Rub",
                                "description": "To Get details of second Rub in Quran"
                            }
                        }
                    }
                ],
                "tags": [
                    "Rub"
                ],
                "security": [
                    {
                        "tokenAuth": []
                    },
                    {
                        "cookieAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Rub"
                                }
                            }
                        },
                        "description": "OK"
                    },
                    "401": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/401_Unauthorized"
                                }
                            }
                        },
                        "description": "Unauthorized. Authorization Credentials not Provided."
                    },
                    "404": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/404_Not_Found"
                                }
                            }
                        },
                        "description": "Item Not Found."
                    },
                    "429": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/429_Throttled"
                                }
                            }
                        },
                        "description": "Throttled. Rate limit exceeded."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Rub": {
                "type": "object",
                "properties": {
                    "detail": {
                        "type": "string",
                        "format": "uri",
                        "readOnly": true
                    },
                    "id": {
                        "type": "integer",
                        "readOnly": true
                    },
                    "rub_number": {
                        "type": "integer"
                    },
                    "verse_count": {
                        "type": "integer"
                    }
                },
                "required": [
                    "detail",
                    "id",
                    "name",
                    "rub_number",
                    "verse_count"
                ]
            },
            "PaginatedRubList": {
                "type": "object",
                "properties": {
                    "count": {
                        "type": "integer",
                        "example": 123
                    },
                    "next": {
                        "type": "string",
                        "nullable": true,
                        "format": "uri",
                        "example": "http://api.example.org/api/hizb/?page=4"
                    },
                    "previous": {
                        "type": "string",
                        "nullable": true,
                        "format": "uri",
                        "example": "http://api.example.org/api/hizb/?page=2"
                    },
                    "results": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Rub"
                        }
                    }
                }
            },
            "404_Not_Found": {
                "type": "object",
                "properties": {
                    "details": {
                        "type": "string",
                        "nullable": false
                    }
                }
            },
            "401_Unauthorized": {
                "type": "object",
                "properties": {
                    "details": {
                        "type": "string",
                        "nullable": false
                    }
                }
            },
            "429_Throttled": {
                "type": "object",
                "properties": {
                    "details": {
                        "type": "string",
                        "nullable": false
                    }
                }
            }
        },
        "securitySchemes": {
            "cookieAuth": {
                "type": "apiKey",
                "in": "cookie",
                "name": "sessionid"
            },
            "tokenAuth": {
                "type": "apiKey",
                "in": "header",
                "name": "Authorization",
                "description": "Token-based authentication with required prefix \"Token\""
            }
        }
    }
}